<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huangjiabin.workbench.dao.ActivityRemarkDao">
    <select id="selectRemark" resultType="int">
        select count(*) from tbl_activity_remark where activityId in
        <foreach collection="array" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </select>

    <delete id="deleteRemarks">
        delete from tbl_activity_remark where tbl_activity_remark.activityId in
        <foreach collection="array" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="getRemarks" resultType="activityRemark">
        select * from tbl_activity_remark where activityId=#{id} order by createTime desc
    </select>

    <delete id="deleteRemark">
        delete from tbl_activity_remark where id =#{id}
    </delete>

    <insert id="saveRemark">
        insert into tbl_activity_remark(id,noteContent,createTime,createBy,editFlag,activityId)
        values(
        #{id},
        #{noteContent},
        #{createTime},
        #{createBy},
        #{editFlag},
        #{activityId}
        )
    </insert>

    <update id="updateRemark">
        update tbl_activity_remark set noteContent=#{noteContent},editBy=#{editBy},editTime=#{editTime} where id=#{id}
    </update>
</mapper>